{% extends 'site/site_base.html.twig' %}

{% block title %}Профиль пользователя {{ user.fullName }}{% endblock %}

{% block body %}

    <div class="col-md-12">
        <h1>Пользователь: {{ user.fullName }}</h1>
        <table class="table centered table-striped">
            <tbody>
            <tr>
                <th>Имя</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Почта</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Телефон</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Последняя активность</th>
                <td>{{ user.lastLogin ? user.lastLogin|date('H:i / d.m.Y') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-success" title="Создать заказ" href="{{ path('order_new') }}"><i class="material-icons">add</i></a>

    </div>

{% endblock %}
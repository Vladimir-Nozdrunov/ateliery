{% extends 'admin/base.html.twig' %}

{% block title %}Отделение: {{ department.address }}{% endblock %}

{% block body %}
    <h1>Филиал: {{ department.address }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Адрес</th>
                <td>{{ department.address }}</td>
            </tr>
            <tr>
                <th>Телефон</th>
                <td>{{ department.phone }}</td>
            </tr>
            <tr>
                <th>Режим работы</th>
                <td>
                    {{ department.openTime ? department.openTime|date('H:i') : '' }}
                      -
                    {{ department.closeTime ? department.closeTime|date('H:i') : '' }}
                </td>
            </tr>
            <tr>
                <th>Сотрудники</th>
                <td>
                    <a title="Просмотр" class="btn btn-info" href="{{ path('users_by_department', {'id': department.id}) }}"><i class="material-icons">remove_red_eye</i></a>
                </td>
            </tr>
        </tbody>
    </table>

    {% if role == 'ROLE_ADMIN' %}
        <a title="Редактировать" class="btn btn-warning" href="{{ path('department_edit', {'id': department.id}) }}"><i class="material-icons">mode_edit</i></a>
        <a title="Удалить" class="btn btn-danger" href="{{ path('department_remove', {'id': department.id}) }}" onclick="return confirm('Вы точно хотите удалить объект?');"><i class="material-icons">delete</i></a>
    {% endif %}

    <div class="col-md-12 text-center">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2541.9257087066326!2d30.537770015730466!3d50.4238557794717!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d4cf125ac803c5%3A0x9c382d91ea74bfc0!2z0YPQuy4g0JXQstCz0LXQvdC40Y8g0JrQvtC90L7QstCw0LvRjNGG0LAsIDQ0INCxLCDQmtC40LXQsiwgMDExMzM!5e0!3m2!1sru!2sua!4v1543454201883" width="1200" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>

{% endblock %}
